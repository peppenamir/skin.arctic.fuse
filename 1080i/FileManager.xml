<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">20</defaultcontrol>
    <include>Action_Blur_Onload</include>
    <onload>RunScript(plugin.video.themoviedb.helper,blur_image=$VAR[Image_SimpleBackground])</onload>
    <controls>
        <include content="Background_Main">
            <param name="plain_background">true</param>
        </include>
        <include content="Background_Transition">
            <param name="windowopen_condition">!$EXP[Exp_SettingsDialogs_Prev]</param>
            <param name="windowclose_condition">!$EXP[Exp_SettingsDialogs_Next]</param>
        </include>

        <include content="Settings_Dialog">
            <include content="DialogInfo_ButtonGroup_Basic">
                <param name="id">9000</param>
                <param name="dim_visible">false</param>
                <onright>20</onright>
                <onleft>SetFocus(30040)</onleft>
                <include content="Settings_Side_Button">
                    <param name="id">01</param>
                    <param name="label">$LOCALIZE[15067]</param>
                    <param name="icon">special://skin/extras/icons/circle-xmark.png</param>
                    <onclick>PreviousMenu</onclick>
                </include>
            </include>
            <include content="Settings_Main_Group">
                <include content="Settings_Left_Group">
                    <width>780</width>
                    <include content="Settings_Left_Content">
                        <include content="List_AddonCategories">
                            <param name="id">20</param>
                            <param name="detailed">true</param>
                            <param name="width" />
                            <onright>60</onright>
                            <onleft>9000</onleft>
                            <onup>30032</onup>
                            <ondown>-</ondown>
                            <pagecontrol>60</pagecontrol>
                            <right>x06</right>
                        </include>
                        <control type="scrollbar" id="60">
                            <centerright>x04</centerright>
                            <bottom>0</bottom>
                            <top>0</top>
                            <width>scrollbar_w</width>
                            <orientation>vertical</orientation>
                            <texturesliderbackground />
                            <texturesliderbar colordiffuse="00ffffff" border="4">scrollbar/scrollv_line.png</texturesliderbar>
                            <include>Texture_Scrollbar_V</include>
                            <onleft>20</onleft>
                            <onright>21</onright>
                        </control>
                    </include>
                    <include content="Settings_InfoText">
                        <param name="id">9930</param>
                        <param name="label">$INFO[Control.GetLabel(12),,[CR]]$INFO[Control.GetLabel(101)]</param>
                        <left>0</left>
                    </include>
                </include>
                <include content="Settings_Right_Group">
                    <left>780</left>
                    <include content="List_AddonCategories">
                        <param name="id">21</param>
                        <param name="detailed">true</param>
                        <param name="width" />
                        <onleft>60</onleft>
                        <pagecontrol>61</pagecontrol>
                        <onright>61</onright>
                        <right>x02</right>
                        <top>-20</top>
                        <bottom>100</bottom>
                    </include>
                    <control type="scrollbar" id="61">
                        <centerright>0</centerright>
                        <bottom>100</bottom>
                        <top>-20</top>
                        <width>scrollbar_w</width>
                        <orientation>vertical</orientation>
                        <texturesliderbackground />
                        <texturesliderbar colordiffuse="00ffffff" border="4">scrollbar/scrollv_line.png</texturesliderbar>
                        <include>Texture_Scrollbar_V</include>
                        <onleft>21</onleft>
                        <onright>-</onright>
                    </control>
                    <include content="Settings_InfoText">
                        <param name="id">9931</param>
                        <param name="label">$INFO[Control.GetLabel(13),,[CR]]$INFO[Control.GetLabel(102)]</param>
                        <left>0</left>
                    </include>
                </include>
            </include>
            <control type="group">
                <height>80</height>
                <left>160</left>
                <centertop>100</centertop>
                <width>settings_category_w</width>
                <control type="label">
                    <align>left</align>
                    <height>20</height>
                    <centertop>50%</centertop>
                    <textoffsetx>40</textoffsetx>
                    <font>font_midi_black</font>
                    <textcolor>main_fg_100</textcolor>
                    <label>$VAR[Label_Header_Mini]</label>
                </control>
            </control>
        </include>


        <include content="Object_Hidden_Button">
            <param name="id">12</param>
        </include>
        <include content="Object_Hidden_Button">
            <param name="id">101</param>
        </include>

        <include content="Object_Hidden_Button">
            <param name="id">13</param>
        </include>
        <include content="Object_Hidden_Button">
            <param name="id">102</param>
        </include>

    </controls>

</window>
